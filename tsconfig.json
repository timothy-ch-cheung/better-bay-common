{
  "compilerOptions": {
    "incremental": true,
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "target": "es2022",
    "declaration": true,
    "outDir": "./lib/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}