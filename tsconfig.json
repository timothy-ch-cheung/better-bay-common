{
  "compilerOptions": {
    "incremental": true,
    "lib": [
      "es2022"
    ],
    "module": "NodeNext",
    "target": "es2022",
    "declaration": true,
    "outDir": "./lib/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "/src/**/*.ts",
    "/src/**/*.d.ts",
    "**/src/**/*.d.ts",
    "**/src/**/*.ts",
    "**/__tests__/**/*.ts",
    "./src/@types/**/*.d.ts"
  ]
}